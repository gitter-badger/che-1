                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.eclipse.che.tutorials</groupId>
                                    <artifactId>che-tutorial-server-side</artifactId>
                                    <type>zip</type>
                                    <version>${che.tutorials.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/packager-conf/zip/tutorials</outputDirectory>
                                    <destFileName>che-tutorial-server-side.zip</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-sdk-tools</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.eclipse.che.plugin</groupId>
                                    <artifactId>che-plugin-sdk-tools</artifactId>
                                    <version>${che.plugins.version}</version>
                                    <classifier>jar-with-dependencies</classifier>
                                    <outputDirectory>${project.build.directory}/tomcat-ide/sdk-tools</outputDirectory>
                                    <destFileName>che-plugin-sdk-tools.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>Prepare Tomcat</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <unzip dest="${project.build.directory}" src="${project.build.directory}/packager-conf/zip/tomcat.zip">
                                    <patternset>
                                        <exclude name="**/ROOT/**" />
                                        <exclude name="**/docs/**" />
                                        <exclude name="**/examples/**" />
                                        <exclude name="**/manager/**" />
                                        <exclude name="**/host-manager/**" />
                                    </patternset>
                                </unzip>
                                <move file="${project.build.directory}/apache-tomcat-${org.apache.tomcat.version}" tofile="${project.build.directory}/tomcat-ide" />
                                <copy overwrite="true" todir="${project.build.directory}/tomcat-ide/tomcat">
                                    <fileset dir="${project.build.directory}/tomcat-ide" />
                                </copy>
                                <copy overwrite="true" todir="${project.build.directory}/tomcat-ide">
                                    <fileset dir="${basedir}/src/main/resources/tomcat" />
                                </copy>
                                <chmod dir="${project.build.directory}/tomcat-ide/bin" includes="**/*.sh" perm="+x" />
                                <move file="${project.build.directory}/tomcat-ide/bin/catalina.sh" tofile="${project.build.directory}/tomcat-ide/bin/che.sh" />
                                <delete file="${project.build.directory}/tomcat-ide/bin/catalina.bat" />
                                <!-- Copy resources to re-build Codenvy IDE with 3rd-party extensions. -->
                                <copy overwrite="true" todir="${project.build.directory}/tomcat-ide/sdk-resources">
                                    <fileset dir="${project.build.directory}/../../assembly-ide" includes="src/**, pom.xml" />
                                </copy>
                                <unwar dest="${project.build.directory}/packager-conf/war/ws" src="${project.build.directory}/packager-conf/war/assembly-ide-${project.version}.war" />
                                <move todir="${project.build.directory}/packager-conf/war/ws/_app">
                                    <fileset dir="${project.build.directory}/packager-conf/war/ws/_app/" />
                                </move>
                                <move todir="${project.build.directory}/tomcat-ide/che-templates/tutorials">
                                    <fileset dir="${project.build.directory}/packager-conf/zip/tutorials" />
                                </move>
                                <war destfile="${project.build.directory}/tomcat-ide/webapps/ws.war" needxmlfile="false">
                                    <fileset dir="${project.build.directory}/packager-conf/war/ws" />
                                </war>
                                <copy file="${project.build.directory}/packager-conf/war/assembly-platform-api-${project.version}.war" overwrite="true" tofile="${project.build.directory}/tomcat-ide/webapps/api.war" />
                                <copy file="${project.build.directory}/packager-conf/war/che-plugin-datasource-server-war-sdk-${che.sdk.version}.war" overwrite="true" tofile="${project.build.directory}/tomcat-ide/webapps/datasource.war" />
                                <copy file="${project.build.directory}/packager-conf/war/assembly-java-codeassistant-${project.version}.war" overwrite="true" tofile="${project.build.directory}/tomcat-ide/webapps/java-ca.war" />
                                <chmod dir="${project.build.directory}/tomcat-ide" includes="*.sh" perm="+x" />
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <!-- Create the distribution zip and attach it to maven -->
                    <execution>
                        <id>tomcat-zip</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <updateOnly>false</updateOnly>
                            <descriptors>
                                <descriptor>${project.basedir}/src/main/assembly/tomcat-archive.xml</descriptor>
                            </descriptors>
                            <finalName>che-${project.version}</finalName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
